<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <tb><a href="/stories/{{_id}}">{{title}}</a></tb>
                    <td>{{createdAt}}</td>
                    <tb><span class="dash-status">{{status}}</span></tb>
                    <tb></tb>

                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any stories</p>
{{/if}}